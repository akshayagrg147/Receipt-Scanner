<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@android:color/black"

            android:textSize="30dp"
            android:id="@+id/date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:textColor="@android:color/black"

            android:textSize="20dp"
            android:id="@+id/recognizeText" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/black"

            android:textSize="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abc company"
            android:textColor="@android:color/black"

            android:textSize="20dp"
            android:id="@+id/titletext" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@android:color/black"

            android:textSize="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@android:color/black"

            android:textSize="20dp"
            android:id="@+id/amounttext" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receipt no"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:id="@+id/Receiptno" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gst Amount"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:id="@+id/gst_amount" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/quick_start_cropped_image"
                android:layout_width="200dp"
                android:layout_height="200dp"

                android:src="@drawable/ic_baseline_image_search_24"
                android:layout_marginTop="39dp"
                android:layout_below="@+id/recognizeText"
                android:layout_centerHorizontal="true" />
            <TextView
                android:text="Fetch Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
<TextView
    android:layout_marginTop="20dp"
    android:id="@+id/detetectedtext"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>




    </LinearLayout>

</ScrollView>